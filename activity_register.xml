<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context="app.first.in.furore.Login">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">
   <ImageView
       android:id="@+id/imname"
       android:layout_width="40dp"
       android:layout_height="40dp"
       android:src="@drawable/name"
       android:layout_margin="5dp"/>


    <EditText
        android:id="@+id/etName"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imname"
        android:hint="Name"
        android:textColorHint="#000"
        android:layout_margin="5dp"/>


</RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
    <ImageView
        android:id="@+id/imphone"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/phone"
        android:layout_margin="5dp"/>

    <EditText
        android:id="@+id/etPhone"
        android:layout_toRightOf="@+id/imphone"
        android:layout_margin="5dp"
        android:inputType="phone"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:hint="Phone Number"
        android:textColorHint="#000"/>

</RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
    <ImageView
        android:id="@+id/imemail"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/email"
        android:layout_margin="5dp"/>
    <EditText
        android:id="@+id/etEmail"
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imemail"
        android:layout_margin="5dp"
        android:hint="Email"
        android:textColorHint="#000"/>

</RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
    <ImageView
        android:id="@+id/impasswordc"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/passwordc"
        android:layout_margin="5dp"/>
    <EditText
        android:id="@+id/etPassword"
        android:inputType="textPassword"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@+id/impasswordc"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:textColorHint="#000"/>
</RelativeLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">
    <ImageView
        android:id="@+id/impasswordcnf"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/password"
        android:layout_margin="5dp"/>
    <EditText
        android:id="@+id/etConformPassword"
        android:inputType="textPassword"
        android:layout_margin="5dp"
        android:layout_toRightOf="@+id/impasswordcnf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Confirm Password"
        android:textColorHint="#000"/>

</RelativeLayout>
    <Button
        android:id="@+id/bSign"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="SIGN UP"
        android:layout_gravity="center"
        android:background="#000"
        android:textColor="#fff"/>
    </LinearLayout>
    </ScrollView>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context="app.first.in.furore.Login">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
        <ImageView
            android:id="@+id/imname"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/name"
            android:layout_margin="5dp"/>


        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imname"
            android:hint="Name"
            android:textColorHint="#000"
            android:layout_margin="5dp"/>


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
        <ImageView
            android:id="@+id/imphone"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/phone"
            android:layout_margin="5dp"/>

        <EditText
            android:id="@+id/etPhone"
            android:layout_toRightOf="@+id/imphone"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:hint="Phone Number"
            android:textColorHint="#000"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
        <ImageView
            android:id="@+id/imemail"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/email"
            android:layout_margin="5dp"/>
        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:layout_toRightOf="@+id/imemail"
            android:layout_margin="5dp"
            android:hint="Email"
            android:textColorHint="#000"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
        <ImageView
            android:id="@+id/imclgname"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/college"
            android:layout_margin="5dp"/>
        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_toRightOf="@+id/imclgname"
            android:layout_margin="5dp"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/Usn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/id"
            android:layout_margin="5dp"/>
        <EditText
            android:id="@+id/etUsn"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/Usn"
            android:layout_margin="5dp"
            android:hint="ID number"
            android:textColorHint="#000"/>

    </RelativeLayout>
<Button
    android:id="@+id/bSelectEvent"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:text="+ Select Event"
    android:textStyle="bold"
    android:gravity="center"
    android:layout_margin="10dp"
    android:background="@android:color/transparent"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



    <Button
        android:id="@+id/bRegister"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Register"
        android:layout_margin="5dp"
        android:background="#000"
        android:textColor="#fff" />

        <Button
            android:id="@+id/bconform"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="confirm"
            android:layout_margin="5dp"
            android:layout_toRightOf="@id/bRegister"
            android:background="#000"
            android:textColor="#fff"
            android:visibility="invisible"
           />

        <Button
        android:id="@+id/bLogout"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:layout_margin="5dp"
        android:background="#000"
        android:textColor="#fff"
        />
    </RelativeLayout>
    </LinearLayout>
    </ScrollView>
</LinearLayout>
